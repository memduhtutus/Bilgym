<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDD5E0"
    tools:context=".GetAppointmentScreen">

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewSelectHour"
                android:layout_width="270dp"
                android:layout_height="38dp"
                android:layout_marginStart="69dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="19dp"
                android:lineSpacingExtra="10sp"
                android:text="Please select the appointment hour"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/radioGroupHours"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/radioGroupHours"
                android:layout_width="408dp"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="87dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toTopOf="@+id/buttonApplyHour"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/radioButtonHour1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10.30 - 11.30" />

                <RadioButton
                    android:id="@+id/radioButtonHour2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12.00 - 13.00" />

                <RadioButton
                    android:id="@+id/radioButtonHour3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="13.30 - 14.30"
                    tools:ignore="TouchTargetSizeCheck" />
            </RadioGroup>

            <Button
                android:id="@+id/buttonApplyHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="68dp"
                android:text="Apply Hour"
                app:layout_constraintBottom_toTopOf="@+id/buttonGetAppointment"
                app:layout_constraintStart_toStartOf="@+id/buttonGetAppointment"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupHours" />

            <Button
                android:id="@+id/buttonGetAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="188dp"
                android:onClick="buttonGetAppointmentClicked"
                android:text="Get AppoÄ±ntment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonApplyHour" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>